<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Staff Invitation"
        android:supportsRtl="true"
        android:theme="@style/Theme.Staff_invitation"
        tools:targetApi="31">
        <activity
            android:name="login.dashboard"
            android:theme="@style/Theme.Staff_invitation.NoActionBar"
            android:exported="false" />
        <activity
            android:name="login.reset_page"
            android:theme="@style/Theme.Staff_invitation.NoActionBar"
            android:exported="false" />
        <activity
            android:name="login.signup_page"
            android:theme="@style/Theme.Staff_invitation.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Staff_invitation.NoActionBar"
            android:exported="false" />
        <activity
            android:name="login.login_mainpage"
            android:exported="true"
            android:label="Staff Invitation"
            android:theme="@style/Theme.Staff_invitation.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>